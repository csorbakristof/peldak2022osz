<Page
    x:Class="ZH2konzi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZH2konzi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <ListBox ItemsSource="{x:Bind Mode=OneWay, Path=DataModel.List}"
                 SelectedItem="{x:Bind Mode=TwoWay, Path=DataModel.SelectedItem}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="local:NumberAndColor">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="50" Height="30" Fill="{x:Bind Mode=OneWay, Path=Brush}"/>
                        <ProgressBar Width="100" Minimum="0" Maximum="100"
                                     Value="{x:Bind Mode=OneWay, Path=Number}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Slider Width="100" Minimum="0" Maximum="100"
                Value="{x:Bind Mode=TwoWay, Path=DataModel.SelectedItem.Number}"/>
        <Button Content="Mutasd! :)" Command="{x:Bind Mode=OneTime, Path=ShowCurrentValueCommand}"/>
    </StackPanel>
</Page>
